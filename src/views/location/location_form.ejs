<%- include('../partials/header.ejs') %>

<main class="form-container">

  <h1 class="hero">
    <%= title %>
  </h1>

  <form action="" method="post" class="form">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= (typeof name != "undefined" ? name : "") %>" placeholder="Location Name" required>
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" id="address" name="address" value="<%= (typeof address != "undefined" ? address : "") %>" placeholder="Address" required>
    </div>

    <button class="btn-primary" type="submit">Submit</button>
    </div>
  </form>
  <% if (typeof errors !="undefined" && errors.length> 0) {%>
  <div class="errors form__errors-container">
    <h3 class="form__errors-header">Errors:</h3>
    <ul class="form__errors-list">
      <% errors.forEach(error=> { %>
      <li class="form__errors-list-item">
        <%= error.msg %>
      </li>
      <% }) %>
    </ul>
  </div>
  <% } %>

</main>
<%- include('../partials/footer.ejs') %>